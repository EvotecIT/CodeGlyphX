{
  "steps": [
    {
      "task": "dotnet-build",
      "project": "../CodeGlyphX/CodeGlyphX.csproj",
      "configuration": "Release",
      "framework": "net10.0"
    },
    {
      "task": "build",
      "config": "./site.json",
      "out": "./_site",
      "clean": true
    },
    {
      "task": "verify",
      "config": "./site.json"
    },
    {
      "task": "apidocs",
      "xml": "../CodeGlyphX/bin/Release/net10.0/CodeGlyphX.xml",
      "assembly": "../CodeGlyphX/bin/Release/net10.0/CodeGlyphX.dll",
      "out": "./_site/api",
      "title": "CodeGlyphX API Reference",
      "baseUrl": "/api",
      "format": "both",
      "template": "docs",
      "nav": "./site.json",
      "css": "/css/api-docs.css",
      "headerHtml": "./themes/codeglyphx/partials/header.html",
      "footerHtml": "./themes/codeglyphx/partials/footer.html",
      "includeNamespace": "CodeGlyphX"
    },
    {
      "task": "llms",
      "siteRoot": "./_site",
      "project": "../CodeGlyphX/CodeGlyphX.csproj",
      "apiIndex": "./_site/api/index.json",
      "apiBase": "/api",
      "apiLevel": "Full",
      "name": "CodeGlyphX",
      "license": "Apache-2.0",
      "targets": ".NET 8+, .NET 10+, .NET Standard 2.0, .NET Framework 4.7.2"
    },
    {
      "task": "sitemap",
      "siteRoot": "./_site",
      "baseUrl": "https://codeglyphx.com",
      "html": true,
      "htmlTitle": "CodeGlyphX Sitemap",
      "entries": [
        { "path": "/", "priority": "1.0", "changefreq": "weekly" },
        { "path": "/docs/", "priority": "0.9", "changefreq": "weekly" },
        { "path": "/benchmarks/", "priority": "0.8", "changefreq": "weekly" },
        { "path": "/showcase/", "priority": "0.8", "changefreq": "monthly" },
        { "path": "/pricing/", "priority": "0.7", "changefreq": "monthly" },
        { "path": "/faq/", "priority": "0.7", "changefreq": "monthly" },
        { "path": "/api/", "priority": "0.8", "changefreq": "weekly" }
      ]
    },
    {
      "task": "optimize",
      "siteRoot": "./_site",
      "config": "./site.json",
      "criticalCss": "./static/css/critical.css",
      "minifyHtml": true,
      "minifyCss": true,
      "minifyJs": true,
      "hashAssets": true,
      "hashExtensions": [".css", ".js"],
      "hashExclude": ["**/vendor/prism/**"],
      "cacheHeaders": true,
      "cacheHeadersOut": "_headers"
    }
  ]
}
