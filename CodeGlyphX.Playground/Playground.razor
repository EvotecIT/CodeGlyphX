@using CodeGlyphX

<div class="playground">
    <h1>Interactive Playground</h1>
    <p class="playground-subtitle">
        Generate QR codes and barcodes in real-time using the actual CodeGlyphX library running in your browser via WebAssembly.
    </p>

    <CascadingValue Value="this">
        <div class="playground-grid">
            <div class="playground-config-column">
                <PlaygroundConfig />
            </div>
            <div class="playground-preview-column">
                <PlaygroundPreview />
            </div>
        </div>

        <PlaygroundExample @key="_exampleKey" />
        <PlaygroundFooter />
    </CascadingValue>
</div>
