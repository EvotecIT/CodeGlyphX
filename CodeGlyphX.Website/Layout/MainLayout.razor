@code {
    private string CurrentTheme { get; set; } = "dark";
    private bool _navOpen = false;
    private bool IsPlayground
    {
        get
        {
            var relative = Nav.ToBaseRelativePath(Nav.Uri);
            if (string.IsNullOrEmpty(relative))
            {
                return true;
            }
            if (relative.StartsWith("playground", StringComparison.OrdinalIgnoreCase))
            {
                return true;
            }

            var basePath = new Uri(Nav.BaseUri).AbsolutePath.TrimEnd('/');
            if (string.IsNullOrEmpty(basePath))
            {
                basePath = "/";
            }
            return basePath.EndsWith("/playground", StringComparison.OrdinalIgnoreCase);
        }
    }

    private IReadOnlyList<NavLink> PrimaryLinks => DefaultPrimaryLinks;
    private FooterNav FooterLinks => DefaultFooter;

    private static readonly NavLink[] DefaultPrimaryLinks =
    {
        new NavLink("/", "Home", true),
        new NavLink("/docs/", "Docs"),
        new NavLink("/playground/", "Playground", true),
        new NavLink("/benchmarks/", "Benchmarks"),
        new NavLink("/showcase/", "Showcase"),
        new NavLink("/pricing/", "Pricing")
    };

    private static readonly FooterNav DefaultFooter = new FooterNav
    {
        Product = new List<NavLink>
        {
            new NavLink("/", "Home", true),
            new NavLink("/playground/", "Playground"),
            new NavLink("/docs/", "Docs"),
            new NavLink("/benchmarks/", "Benchmarks"),
            new NavLink("/showcase/", "Showcase"),
            new NavLink("/pricing/", "Pricing")
        },
        Resources = new List<NavLink>
        {
            new NavLink("/faq/", "FAQ"),
            new NavLink("https://www.nuget.org/packages/CodeGlyphX", "NuGet Package"),
            new NavLink("https://github.com/EvotecIT/CodeGlyphX", "GitHub Repository"),
            new NavLink("https://github.com/EvotecIT/CodeGlyphX/issues", "Report Issue")
        },
        Company = new List<NavLink>
        {
            new NavLink("https://evotec.xyz", "Evotec Services"),
            new NavLink("https://evotec.xyz/hub", "Blog")
        }
    };

    protected override async Task OnInitializedAsync()
    {
        Nav.LocationChanged += OnLocationChanged;
        await Task.CompletedTask;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            CurrentTheme = await JS.InvokeAsync<string>("getTheme") ?? "dark";
            StateHasChanged();
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _navOpen = false;
        StateHasChanged();
    }

    private string GetThemeTitle() => CurrentTheme switch
    {
        "light" => "Light mode (click to switch to dark)",
        "dark" => "Dark mode (click to switch to auto)",
        _ => "Auto mode (click to switch to light)"
    };

    private async Task CycleTheme()
    {
        var next = CurrentTheme switch
        {
            "light" => "dark",
            "dark" => "auto",
            _ => "light"
        };
        await SetTheme(next);
    }

    private async Task SetTheme(string theme)
    {
        CurrentTheme = theme;
        await JS.InvokeVoidAsync("setTheme", theme);
    }

    private void OnNavToggleChanged(ChangeEventArgs e)
    {
        _navOpen = (bool)(e.Value ?? false);
    }

    private void CloseNav()
    {
        _navOpen = false;
    }

    private void Navigate(string href)
    {
        _navOpen = false;
        Nav.NavigateTo(href);
    }

    private void ForceNavigate(string href)
    {
        _navOpen = false;
        Nav.NavigateTo(href, forceLoad: true);
    }

    private RenderFragment RenderNavLink(NavLink link) => __builder =>
    {
        if (IsExternal(link.Href))
        {
            <a href="@link.Href" target="_blank" rel="noopener">@link.Text</a>
        }
        else if (IsStaticPage(link.Href))
        {
            <a href="@link.Href" @onclick="() => ForceNavigate(link.Href)" @onclick:preventDefault="true">@link.Text</a>
        }
        else if (link.Spa)
        {
            <a href="@link.Href" @onclick="() => Navigate(link.Href)" @onclick:preventDefault="true">@link.Text</a>
        }
        else
        {
            <a href="@link.Href" @onclick="() => ForceNavigate(link.Href)" @onclick:preventDefault="true">@link.Text</a>
        }
    };

    private bool IsStaticPage(string href)
    {
        if (string.Equals(href, "/", StringComparison.OrdinalIgnoreCase))
        {
            var basePath = new Uri(Nav.BaseUri).AbsolutePath.TrimEnd('/');
            if (string.IsNullOrEmpty(basePath))
            {
                basePath = "/";
            }
            // When hosted under /playground/, "/" is the static site home.
            return string.Equals(basePath, "/playground", StringComparison.OrdinalIgnoreCase);
        }

        return href.Contains("/docs/", StringComparison.OrdinalIgnoreCase) ||
               href.Contains("/faq/", StringComparison.OrdinalIgnoreCase) ||
               href.Contains("/benchmarks/", StringComparison.OrdinalIgnoreCase) ||
               href.Contains("/showcase/", StringComparison.OrdinalIgnoreCase) ||
               href.Contains("/api/", StringComparison.OrdinalIgnoreCase) ||
               href.Contains("/pricing/", StringComparison.OrdinalIgnoreCase);
    }

    private static bool IsExternal(string href)
    {
        if (string.IsNullOrWhiteSpace(href))
            return false;

        return Uri.TryCreate(href, UriKind.Absolute, out var uri)
            && (uri.Scheme == Uri.UriSchemeHttp || uri.Scheme == Uri.UriSchemeHttps);
    }

    private sealed record NavLink(string Href, string Text, bool Spa = false);

    private sealed class FooterNav
    {
        public List<NavLink> Product { get; set; } = new();
        public List<NavLink> Resources { get; set; } = new();
        public List<NavLink> Company { get; set; } = new();
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }
}
