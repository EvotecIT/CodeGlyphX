                        </svg>
                    </a>
                    <div class="theme-toggle">
                        <button @onclick="SetLightTheme" class="@GetThemeClass("light")" title="Light mode">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="5"/>
                                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
                            </svg>
                        </button>
                        <button @onclick="SetDarkTheme" class="@GetThemeClass("dark")" title="Dark mode">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
                            </svg>
                        </button>
                        <button @onclick="SetAutoTheme" class="@GetThemeClass("auto")" title="System preference">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                                <line x1="8" y1="21" x2="16" y2="21"/>
                                <line x1="12" y1="17" x2="12" y2="21"/>
                            </svg>
                        </button>
                    </div>
                    <a href="https://www.nuget.org/packages/CodeGlyphX" target="_blank" rel="noopener" class="nav-cta">
                        <svg viewBox="0 0 24 24" fill="currentColor" class="nav-cta-icon">
                            <path d="M12 0L1.75 6v12L12 24l10.25-6V6zm-1.775 18a3.11 3.11 0 01-3.111-3.111 3.11 3.11 0 013.111-3.111 3.11 3.11 0 013.111 3.111A3.11 3.11 0 0110.225 18zm4.91-6.944a1.867 1.867 0 01-1.867-1.867 1.867 1.867 0 011.866-1.866 1.867 1.867 0 011.867 1.866 1.867 1.867 0 01-1.867 1.867z"/>
                        </svg>
                        Get Started
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main class="main">
        @Body
    </main>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-brand">
                <div class="footer-logo">
                    <img src="codeglyphx-qr-icon.png" alt="CodeGlyphX logo" width="28" height="28" />
                    <span>CodeGlyphX</span>
                </div>
                <p>Zero-dependency QR &amp; barcode toolkit for .NET</p>
            </div>
            <div class="footer-links">
                <div class="footer-section">
                    <h3>Product</h3>
                    @foreach (var link in FooterLinks.Product)
                    {
                        if (IsExternal(link.Href))
                        {
                            <a href="@link.Href" target="_blank" rel="noopener">@link.Text</a>
                        }
                        else
                        {
                            <a href="@link.Href">@link.Text</a>
                        }
                    }
                </div>
                <div class="footer-section">
                    <h3>Resources</h3>
                    @foreach (var link in FooterLinks.Resources)
                    {
                        if (IsExternal(link.Href))
                        {
                            <a href="@link.Href" target="_blank" rel="noopener">@link.Text</a>
                        }
                        else
                        {
                            <a href="@link.Href">@link.Text</a>
                        }
                    }
                </div>
                <div class="footer-section">
                    <h3>Company</h3>
                    @foreach (var link in FooterLinks.Company)
                    {
                        if (IsExternal(link.Href))
                        {
                            <a href="@link.Href" target="_blank" rel="noopener">@link.Text</a>
                        }
                        else
                        {
                            <a href="@link.Href">@link.Text</a>
                        }
                    }
                </div>
            </div>
            <div class="footer-bottom">
                <div class="footer-social">
                    <a href="https://twitter.com/PrzemyslawKlys" target="_blank" rel="noopener" title="Twitter / X" aria-label="Twitter / X">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </a>
                    <a href="https://www.linkedin.com/in/pklys" target="_blank" rel="noopener" title="LinkedIn" aria-label="LinkedIn">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    </a>
                    <a href="https://github.com/EvotecIT" target="_blank" rel="noopener" title="GitHub" aria-label="GitHub">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                    </a>
                </div>
                <div class="footer-badges">
                    <a href="https://github.com/EvotecIT/CodeGlyphX" target="_blank" rel="noopener">
                        <img src="https://img.shields.io/github/stars/EvotecIT/CodeGlyphX?style=social" alt="GitHub stars" width="100" height="20" loading="lazy" />
                    </a>
                    <a href="https://www.nuget.org/packages/CodeGlyphX" target="_blank" rel="noopener">
                        <img src="https://img.shields.io/nuget/dt/CodeGlyphX" alt="NuGet downloads" width="100" height="20" loading="lazy" />
                    </a>
                </div>
                <p>Apache 2.0 License &bull; &copy; @DateTime.Now.Year Evotec Services sp. z o.o.</p>
            </div>
        </div>
    </footer>
</div>

@code {
    private string CurrentTheme { get; set; } = "dark";
    private bool _navOpen = false;
    private SiteNavConfig? _navConfig;

    private IReadOnlyList<NavLink> PrimaryLinks => _navConfig?.Primary.Count > 0 ? _navConfig!.Primary : DefaultPrimaryLinks;
    private FooterNav FooterLinks => _navConfig?.Footer ?? DefaultFooter;

    private static readonly NavLink[] DefaultPrimaryLinks =
    {
        new NavLink("/", "Home", true),
        new NavLink("/playground/", "Playground", true),
        new NavLink("/docs/", "Docs", true),
        new NavLink("/benchmarks/", "Benchmarks", false),
        new NavLink("/showcase/", "Showcase", true)
    };

    private static readonly FooterNav DefaultFooter = new FooterNav
    {
        Product = new List<NavLink>
        {
            new NavLink("/", "Home"),
            new NavLink("/playground/", "Playground"),
            new NavLink("/docs/", "Docs"),
            new NavLink("/benchmarks/", "Benchmarks"),
            new NavLink("/showcase/", "Showcase")
        },
        Resources = new List<NavLink>
        {
            new NavLink("/faq/", "FAQ"),
            new NavLink("https://www.nuget.org/packages/CodeGlyphX", "NuGet Package"),
            new NavLink("https://github.com/EvotecIT/CodeGlyphX", "GitHub Repository"),
            new NavLink("https://github.com/EvotecIT/CodeGlyphX/issues", "Report Issue")
        },
        Company = new List<NavLink>
        {
            new NavLink("https://evotec.xyz", "Evotec Services"),
            new NavLink("https://evotec.xyz/hub", "Blog")
        }
    };

    protected override async Task OnInitializedAsync()
    {
        Nav.LocationChanged += OnLocationChanged;
        await LoadNavAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            CurrentTheme = await JS.InvokeAsync<string>("getTheme") ?? "dark";
            StateHasChanged();
        }
    }

    private async Task LoadNavAsync()
    {
        try
        {
            var config = await Http.GetFromJsonAsync<SiteNavConfig>("data/site-nav.json");
            if (config == null)
            {
                Logger?.LogWarning("Navigation config missing or empty. Using defaults.");
                return;
            }

            if (config.Primary.Count == 0 && config.Links.Count > 0)
            {
                config.Primary = config.Links;
            }

            config.Footer ??= DefaultFooter;

            if (config.Primary.Count == 0)
            {
                Logger?.LogWarning("Navigation config missing primary links. Using defaults.");
                return;
            }

            _navConfig = config;
        }
        catch (Exception ex)
        {
            Logger?.LogWarning(ex, "Failed to load navigation config. Using defaults.");
            _navConfig = null;
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _navOpen = false;
        StateHasChanged();
    }

    private string GetThemeClass(string theme) => CurrentTheme == theme ? "active" : "";

    private async Task SetLightTheme() => await SetTheme("light");
    private async Task SetDarkTheme() => await SetTheme("dark");
    private async Task SetAutoTheme() => await SetTheme("auto");

    private async Task SetTheme(string theme)
    {
        CurrentTheme = theme;
        await JS.InvokeVoidAsync("setTheme", theme);
    }

    private void OnNavToggleChanged(ChangeEventArgs e)
    {
        _navOpen = (bool)(e.Value ?? false);
    }

    private void CloseNav()
    {
        _navOpen = false;
    }

    private void Navigate(string href)
    {
        _navOpen = false;
        Nav.NavigateTo(href);
    }

    private static bool IsExternal(string href)
        => href.StartsWith("http", StringComparison.OrdinalIgnoreCase);

    private sealed record NavLink(string Href, string Text, bool Spa = false);

    private sealed class FooterNav
    {
        public List<NavLink> Product { get; set; } = new();
        public List<NavLink> Resources { get; set; } = new();
        public List<NavLink> Company { get; set; } = new();
    }

    private sealed class SiteNavConfig
    {
        public List<NavLink> Primary { get; set; } = new();
        public List<NavLink> Links { get; set; } = new();
        public FooterNav? Footer { get; set; } = DefaultFooter;
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }
}
