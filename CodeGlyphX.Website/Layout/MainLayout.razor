@inherits LayoutComponentBase
@implements IDisposable
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.Extensions.Logging
@using System.Net.Http.Json
@inject ILogger<MainLayout> Logger
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="page">
    <header class="header">
        <div class="header-content">
            <a href="/" class="brand" @onclick="@(() => Navigate("/"))" @onclick:preventDefault="true">
                <div class="brand-icon">
                    <img src="codeglyphx-qr-icon.png" alt="CodeGlyphX logo" width="28" height="28" />
                </div>
                <span>CodeGlyphX</span>
            </a>

            <input type="checkbox" id="nav-toggle" class="nav-toggle-checkbox" @onchange="OnNavToggleChanged" checked="@_navOpen" />
            <label for="nav-toggle" class="nav-toggle" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </label>

            <nav class="nav @(_navOpen ? "nav-open" : "")">
                <div class="nav-links">
                    @foreach (var link in PrimaryLinks)
                    {
                        if (link.Spa)
                        {
                            <a href="@link.Href" @onclick="() => Navigate(link.Href)" @onclick:preventDefault="true">@link.Text</a>
                        }
                        else if (IsExternal(link.Href))
                        {
                            <a href="@link.Href" target="_blank" rel="noopener">@link.Text</a>
                        }
                        else
                        {
                            <a href="@link.Href">@link.Text</a>
                        }
                    }
                </div>
                <div class="nav-actions">
                    <a href="https://github.com/EvotecIT/CodeGlyphX" target="_blank" rel="noopener" class="nav-icon" title="GitHub" aria-label="GitHub">
