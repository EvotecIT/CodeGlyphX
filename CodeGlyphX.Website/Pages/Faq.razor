@page "/faq"
@inject HttpClient Http

<PageTitle>FAQ - CodeGlyphX</PageTitle>

<div class="faq-page">
    <div class="faq-hero">
        <span class="section-label">Support</span>
        <h1>Frequently Asked Questions</h1>
        <p>Common questions about CodeGlyphX and QR/barcode generation in .NET.</p>
    </div>

    @if (_data == null)
    {
        <div class="loading">Loading FAQ...</div>
    }
    else
    {
        <div class="faq-content">
            @foreach (var faqSection in _data.Sections)
            {
                <div class="faq-section">
                    <h2>@faqSection.Title</h2>
                    <div class="faq-items">
                        @foreach (var item in faqSection.Items)
                        {
                            <details class="faq-item" id="@item.Id">
                                <summary class="faq-question">
                                    <span>@item.Question</span>
                                    <svg class="faq-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M6 9l6 6 6-6"/>
                                    </svg>
                                </summary>
                                <div class="faq-answer">
                                    @((MarkupString)item.Answer)
                                </div>
                            </details>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="faq-cta">
            <h3>Still have questions?</h3>
            <p>Can't find what you're looking for? Open an issue on GitHub and we'll help you out.</p>
            <a href="https://github.com/EvotecIT/CodeGlyphX/issues" target="_blank" rel="noopener" class="btn btn-primary">
                <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Ask on GitHub
            </a>
        </div>
    }
</div>

@code {
    private FaqData? _data;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _data = await Http.GetFromJsonAsync<FaqData>("api/faq.json");
        }
        catch
        {
            // Fallback - data may not be available in dev mode
        }
    }

    public class FaqData
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public FaqSection[] Sections { get; set; } = Array.Empty<FaqSection>();
    }

    public class FaqSection
    {
        public string Title { get; set; } = "";
        public FaqItem[] Items { get; set; } = Array.Empty<FaqItem>();
    }

    public class FaqItem
    {
        public string Id { get; set; } = "";
        public string Question { get; set; } = "";
        public string Answer { get; set; } = "";
    }
}
