@page "/docs/api"
@page "/docs/api/{TypeSlug}"
@inject HttpClient Http
@inject IJSRuntime JS

<HeadContent>
    <link rel="stylesheet" href="css/api.css" />
</HeadContent>

<PageTitle>@(_selectedType != null ? $"{_selectedType.Name} - API Reference" : "API Reference") - CodeGlyphX</PageTitle>

<div class="api-layout">
    <button class="sidebar-toggle" @onclick="ToggleSidebar" aria-label="Toggle API navigation">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
            <path d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <span>API Navigation</span>
    </button>
    <div class="sidebar-overlay @(_sidebarOpen ? "active" : "")" @onclick="CloseSidebar"></div>
    <aside class="api-sidebar @(_sidebarOpen ? "sidebar-open" : "")">
        <div class="sidebar-header">
            <a href="/docs/api" class="sidebar-title @(string.IsNullOrEmpty(TypeSlug) ? "active" : "")">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
                <span>API Reference</span>
            </a>
        </div>

        <div class="sidebar-search">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"/>
                <path d="M21 21l-4.35-4.35"/>
            </svg>
            <input type="text" placeholder="Filter types..." @bind="_searchFilter" @bind:event="oninput" />
            @if (!string.IsNullOrEmpty(_searchFilter))
            {
                <button class="clear-search" @onclick="() => _searchFilter = string.Empty">
                    <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"/>
                    </svg>
                </button>
            }
        </div>

        <nav class="sidebar-nav">
            @if (_isLoading)
            {
                <div class="sidebar-loading">Loading...</div>
            }
            else if (!string.IsNullOrEmpty(_loadError))
            {
                <div class="sidebar-error">@_loadError</div>
            }
            else if (_index != null)
            {
                @if (GetMainTypes().Any())
                {
                    <div class="nav-section">
                        <div class="nav-section-header main-api" @onclick='() => ToggleSection("main")'>
                            <svg class="chevron @(_expandedSections.Contains("main") ? "expanded" : "")" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 18l6-6-6-6"/>
                            </svg>
                            <span>Main API</span>
                            <span class="type-count">@GetMainTypes().Count()</span>
                        </div>
                        @if (_expandedSections.Contains("main"))
                        {
                            <div class="nav-section-content">
                                @foreach (var type in GetMainTypes())
                                {
                                    <a href="/docs/api/@type.Slug" class="type-item @(TypeSlug == type.Slug ? "active" : "")">
                                        <span class="type-icon @type.Kind.ToLowerInvariant()">@GetTypeIcon(type.Kind)</span>
                                        <span class="type-name">@type.Name</span>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                }

                @foreach (var ns in GetFilteredNamespaces())
                {
                    var nsKey = ns.Key;
                    <div class="nav-section">
                        <div class="nav-section-header" @onclick="() => ToggleSection(nsKey)">
                            <svg class="chevron @(_expandedSections.Contains(nsKey) ? "expanded" : "")" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 18l6-6-6-6"/>
                            </svg>
                            <span>@GetShortNamespace(ns.Key)</span>
                            <span class="type-count">@ns.Count()</span>
                        </div>
                        @if (_expandedSections.Contains(nsKey))
                        {
                            <div class="nav-section-content">
                                @foreach (var type in ns.OrderBy(t => t.Name))
                                {
                                    <a href="/docs/api/@type.Slug" class="type-item @(TypeSlug == type.Slug ? "active" : "")">
                                        <span class="type-icon @type.Kind.ToLowerInvariant()">@GetTypeIcon(type.Kind)</span>
                                        <span class="type-name">@type.Name</span>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                }
            }
        </nav>

        <div class="sidebar-footer">
            <a href="/docs" class="back-link">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                Back to Docs
            </a>
        </div>
    </aside>

    <main class="api-content">
        @if (_isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading API documentation...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(_loadError))
        {
            <div class="loading-state">
                <p>@_loadError</p>
            </div>
        }
        else if (string.IsNullOrEmpty(TypeSlug))
        {
            <div class="api-overview">
                <h1>API Reference</h1>
                <p class="lead">Complete API documentation for CodeGlyphX, auto-generated from XML documentation.</p>

                @if (_index != null)
                {
                    <section class="quick-start">
                        <h2>Quick Start</h2>
                        <p class="section-desc">The most commonly used classes for generating QR codes and barcodes.</p>
                        <div class="quick-grid">
                            @foreach (var type in GetMainTypes().Take(6))
                            {
                                <a href="/docs/api/@type.Slug" class="quick-card">
                                    <div class="quick-card-header">
                                        <span class="type-icon large @type.Kind.ToLowerInvariant()">@GetTypeIcon(type.Kind)</span>
                                        <strong>@type.Name</strong>
                                    </div>
                                    @if (!string.IsNullOrEmpty(type.Summary))
                                    {
                                        <p>@Truncate(type.Summary, 100)</p>
                                    }
                                </a>
                            }
                        </div>
                    </section>

                    <section class="all-namespaces">
                        <h2>All Namespaces</h2>
                        <p class="section-desc">Browse all @_index.TypeCount types organized by namespace.</p>
                        @foreach (var ns in _index.Types.GroupBy(t => t.Namespace).OrderBy(n => n.Key))
                        {
                            <div class="namespace-group">
                                <h3>@(string.IsNullOrWhiteSpace(ns.Key) ? "(global)" : ns.Key) <span class="count">(@ns.Count())</span></h3>
                                <div class="type-chips">
                                    @foreach (var type in ns.OrderBy(t => t.Name))
                                    {
                                        <a href="/docs/api/@type.Slug" class="type-chip @type.Kind.ToLowerInvariant()">
                                            <span class="chip-icon">@GetTypeIcon(type.Kind)</span>
                                            @type.Name
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    </section>
                }
            </div>
        }
        else if (_selectedType != null)
        {
            <article class="type-detail">
                <nav class="breadcrumb">
                    <a href="/docs/api">API Reference</a>
                    <span class="sep">/</span>
                    <span class="current">@_selectedType.Name</span>
                </nav>

                <header class="type-header">
                    <div class="type-title-row">
                        <span class="type-badge @_selectedType.Kind.ToLowerInvariant()">@_selectedType.Kind</span>
                        <h1>@_selectedType.Name</h1>
                    </div>
                    <code class="namespace">namespace @_selectedType.Namespace</code>
                </header>

                @if (!string.IsNullOrEmpty(_selectedType.Summary))
                {
                    <p class="type-summary">@FormatText(_selectedType.Summary)</p>
                }

                @if (!string.IsNullOrEmpty(_selectedType.Remarks))
                {
                    <section class="remarks">
                        <h2>Remarks</h2>
                        <p>@FormatText(_selectedType.Remarks)</p>
                    </section>
                }

                @if (_selectedType.Examples.Count > 0)
                {
                    <section class="examples">
                        <h2>Examples</h2>
                        @foreach (var ex in _selectedType.Examples)
                        {
                            <h3>@ex.Title</h3>
                            @if (!string.IsNullOrWhiteSpace(ex.Code))
                            {
                                <pre class="code-block"><code class="language-csharp">@FormatCode(ex.Code)</code></pre>
                            }
                            @if (!string.IsNullOrWhiteSpace(ex.Remarks))
                            {
                                <p>@ex.Remarks</p>
                            }
                        }
                    </section>
                }

                @foreach (var group in _selectedType.Members.GroupBy(m => m.Kind))
                {
                    <section class="member-section">
                        <h2>@group.Key</h2>
                        @foreach (var member in group)
                        {
                            <div class="member-card" id="@member.Anchor">
                                <div class="member-header">
                                    <code class="member-signature">@member.Signature</code>
                                </div>

                                @if (!string.IsNullOrEmpty(member.Summary))
                                {
                                    <p class="member-summary">@FormatText(member.Summary)</p>
                                }

                                @if (!string.IsNullOrEmpty(member.Remarks))
                                {
                                    <p class="member-remarks">@FormatText(member.Remarks)</p>
                                }

                                @if (member.Parameters.Count > 0)
                                {
                                    <h4>Parameters</h4>
                                    <dl class="param-list">
                                        @foreach (var param in member.Parameters)
                                        {
                                            <dt>@param.Name <span class="param-type">@param.Type</span></dt>
                                            @if (!string.IsNullOrEmpty(param.Description))
                                            {
                                                <dd>@FormatText(param.Description)</dd>
                                            }
                                        }
                                    </dl>
                                }

                                @if (!string.IsNullOrEmpty(member.Returns))
                                {
                                    <h4>Returns</h4>
                                    <p>@member.Returns</p>
                                }

                                @if (member.Exceptions.Count > 0)
                                {
                                    <h4>Exceptions</h4>
                                    <ul class="exception-list">
                                        @foreach (var ex in member.Exceptions)
                                        {
                                            <li>@ex.Type @if (!string.IsNullOrEmpty(ex.Description)) { <span>- @ex.Description</span> }</li>
                                        }
                                    </ul>
                                }

                                @if (member.Examples.Count > 0)
                                {
                                    <h4>Examples</h4>
                                        @foreach (var ex in member.Examples)
                                        {
                                            <h5>@ex.Title</h5>
                                            @if (!string.IsNullOrWhiteSpace(ex.Code))
                                            {
                                                <pre class="code-block"><code class="language-csharp">@FormatCode(ex.Code)</code></pre>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(ex.Remarks))
                                            {
                                                <p>@ex.Remarks</p>
                                            }
                                    }
                                }
                            </div>
                        }
                    </section>
                }
            </article>
        }
        else
        {
            <div class="loading-state">
                <p>API type not found.</p>
            </div>
        }
    </main>
</div>

@code {
    [Parameter]
    public string? TypeSlug { get; set; }

    private ApiIndex? _index;
    private ApiTypeDetail? _selectedType;
    private bool _isLoading = true;
    private string? _loadError;
    private string _searchFilter = string.Empty;
    private readonly HashSet<string> _expandedSections = new(StringComparer.OrdinalIgnoreCase);
    private bool _sidebarOpen = false;

    private void ToggleSidebar() => _sidebarOpen = !_sidebarOpen;
    private void CloseSidebar() => _sidebarOpen = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JS.InvokeVoidAsync("CodeGlyphX.initCodeBlocks");
    }

    private static readonly string[] MainTypeOrder =
    {
        "QR",
        "Barcode",
        "QrEasy",
        "BarcodeEasy",
        "QrImageDecoder",
        "DataMatrixCode",
        "Pdf417Code",
        "AztecCode"
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadIndexAsync();
        await LoadTypeAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_index == null)
            await LoadIndexAsync();

        await LoadTypeAsync();
    }

    private async Task LoadIndexAsync()
    {
        _isLoading = true;
        _loadError = null;
        try
        {
            _index = await Http.GetFromJsonAsync<ApiIndex>("/api/index.json");
            if (_index != null)
            {
                foreach (var ns in _index.Types.Select(t => string.IsNullOrWhiteSpace(t.Namespace) ? "(global)" : t.Namespace).Distinct())
                    _expandedSections.Add(ns);
            }
        }
        catch (Exception ex)
        {
            _loadError = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadTypeAsync()
    {
        if (string.IsNullOrWhiteSpace(TypeSlug))
        {
            _selectedType = null;
            return;
        }

        try
        {
            _selectedType = await Http.GetFromJsonAsync<ApiTypeDetail>($"/api/types/{TypeSlug}.json");
        }
        catch
        {
            _selectedType = null;
        }
    }

    private IEnumerable<ApiTypeSummary> GetMainTypes()
    {
        if (_index == null)
            yield break;
        foreach (var name in MainTypeOrder)
        {
            var type = _index.Types.FirstOrDefault(t => string.Equals(t.Name, name, StringComparison.OrdinalIgnoreCase));
            if (type != null)
                yield return type;
        }
    }

    private IEnumerable<IGrouping<string, ApiTypeSummary>> GetFilteredNamespaces()
    {
        if (_index == null) return Enumerable.Empty<IGrouping<string, ApiTypeSummary>>();

        IEnumerable<ApiTypeSummary> types = _index.Types;
        if (!string.IsNullOrWhiteSpace(_searchFilter))
        {
            var query = _searchFilter.Trim();
            types = types.Where(t =>
                t.Name.Contains(query, StringComparison.OrdinalIgnoreCase) ||
                t.FullName.Contains(query, StringComparison.OrdinalIgnoreCase) ||
                (t.Summary ?? string.Empty).Contains(query, StringComparison.OrdinalIgnoreCase));
        }

        types = types.Where(t => !IsMainType(t.Name));

        return types
            .GroupBy(t => string.IsNullOrWhiteSpace(t.Namespace) ? "(global)" : t.Namespace)
            .OrderBy(g => g.Key, StringComparer.OrdinalIgnoreCase);
    }

    private static bool IsMainType(string name)
        => MainTypeOrder.Contains(name, StringComparer.OrdinalIgnoreCase);

    private static string GetShortNamespace(string ns)
    {
        if (string.IsNullOrWhiteSpace(ns)) return "(global)";
        var parts = ns.Split('.', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length == 0 ? ns : parts[^1];
    }

    private static string FormatCode(string? code)
    {
        if (string.IsNullOrWhiteSpace(code)) return string.Empty;

        var lines = code.Replace("\r", string.Empty).Split('\n').ToList();
        while (lines.Count > 0 && string.IsNullOrWhiteSpace(lines[0]))
            lines.RemoveAt(0);
        while (lines.Count > 0 && string.IsNullOrWhiteSpace(lines[^1]))
            lines.RemoveAt(lines.Count - 1);

        if (lines.Count == 0) return string.Empty;

        var minIndent = lines
            .Where(line => line.Length > 0)
            .Select(line => line.TakeWhile(ch => ch == ' ' || ch == '\t').Count())
            .DefaultIfEmpty(0)
            .Min();

        if (minIndent > 0)
        {
            for (var i = 0; i < lines.Count; i++)
            {
                var line = lines[i];
                lines[i] = line.Length >= minIndent ? line.Substring(minIndent) : line;
            }
        }

        return string.Join("\n", lines);
    }

    private static MarkupString FormatText(string? text)
    {
        if (string.IsNullOrWhiteSpace(text)) return new MarkupString(string.Empty);

        var normalized = text.Replace("\r", string.Empty);
        var paragraphs = normalized.Split("\n\n", StringSplitOptions.None)
            .Select(p => System.Text.RegularExpressions.Regex.Replace(p.Replace("\n", " "), "\\s+", " ").Trim());
        var collapsed = string.Join("\n\n", paragraphs);
        var encoded = System.Net.WebUtility.HtmlEncode(collapsed);
        encoded = encoded
            .Replace(".", ".<wbr>")
            .Replace(",", ",<wbr>")
            .Replace(")", ")<wbr>")
            .Replace(">", "><wbr>")
            .Replace("\n\n", "<br/><br/>");

        return new MarkupString(encoded);
    }

    private static string Truncate(string value, int length)
    {
        if (string.IsNullOrWhiteSpace(value)) return string.Empty;
        return value.Length <= length ? value : value.Substring(0, length).Trim() + "...";
    }

    private void ToggleSection(string key)
    {
        if (_expandedSections.Contains(key))
            _expandedSections.Remove(key);
        else
            _expandedSections.Add(key);
    }

    private static string GetTypeIcon(string kind)
        => kind switch
        {
            "Class" => "C",
            "Struct" => "S",
            "Interface" => "I",
            "Enum" => "E",
            "Delegate" => "D",
            _ => "T"
        };

    private sealed class ApiIndex
    {
        public string? Title { get; set; }
        public int TypeCount { get; set; }
        public List<ApiTypeSummary> Types { get; set; } = new();
    }

    private sealed class ApiTypeSummary
    {
        public string Name { get; set; } = string.Empty;
        public string FullName { get; set; } = string.Empty;
        public string Namespace { get; set; } = string.Empty;
        public string Kind { get; set; } = string.Empty;
        public string Slug { get; set; } = string.Empty;
        public string? Summary { get; set; }
    }

    private sealed class ApiTypeDetail
    {
        public string Name { get; set; } = string.Empty;
        public string Namespace { get; set; } = string.Empty;
        public string Kind { get; set; } = string.Empty;
        public string Slug { get; set; } = string.Empty;
        public string? Summary { get; set; }
        public string? Remarks { get; set; }
        public List<ApiExample> Examples { get; set; } = new();
        public List<ApiMember> Members { get; set; } = new();
    }

    private sealed class ApiMember
    {
        public string Name { get; set; } = string.Empty;
        public string Kind { get; set; } = string.Empty;
        public string Signature { get; set; } = string.Empty;
        public string Anchor { get; set; } = string.Empty;
        public string? Summary { get; set; }
        public string? Remarks { get; set; }
        public string? Returns { get; set; }
        public List<ApiParameter> Parameters { get; set; } = new();
        public List<ApiException> Exceptions { get; set; } = new();
        public List<ApiExample> Examples { get; set; } = new();
    }

    private sealed class ApiParameter
    {
        public string Name { get; set; } = string.Empty;
        public string Type { get; set; } = string.Empty;
        public string? Description { get; set; }
    }

    private sealed class ApiException
    {
        public string Type { get; set; } = string.Empty;
        public string? Description { get; set; }
    }

    private sealed class ApiExample
    {
        public string Title { get; set; } = string.Empty;
        public string? Code { get; set; }
        public string? Remarks { get; set; }
    }
}
