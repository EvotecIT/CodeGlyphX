<Project>
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Deterministic>true</Deterministic>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Avoid Windows-only fallback folder paths when building on non-Windows runtimes. -->
    <RestoreFallbackFolders Condition="'$(MSBuildRuntimeOS)' != 'Windows'"></RestoreFallbackFolders>
  </PropertyGroup>
</Project>
