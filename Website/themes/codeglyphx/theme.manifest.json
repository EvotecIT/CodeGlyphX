{
  "$schema": "https://raw.githubusercontent.com/EvotecIT/PSPublishModule/main/schemas/powerforge.web.themespec.schema.json",
  "schemaVersion": 2,
  "contractVersion": 2,
  "name": "codeglyphx",
  "engine": "scriban",
  "extends": "nova",
  "scriptsPath": "scripts",
  "features": ["docs", "apiDocs", "notFound"],
  "slots": {
    "header": "header",
    "footer": "footer",
    "api-header": "api-header",
    "api-footer": "api-footer",
    "docs-sidebar": "docs-sidebar",
    "theme-tokens": "theme-tokens"
  },
  "featureContracts": {
    "apiDocs": {
      "requiredPartials": ["api-header", "api-footer"],
      "cssHrefs": ["/css/api.css"],
      "requiredCssSelectors": [
        ".api-layout",
        ".api-sidebar",
        ".api-content",
        ".sidebar-toggle",
        ".type-item",
        ".filter-button",
        ".member-card",
        ".member-signature"
      ]
    },
    "docs": {
      "requiredLayouts": ["docs"],
      "requiredPartials": ["header", "footer", "docs-sidebar"],
      "requiredCssSelectors": [".docs-layout"]
    },
    "notFound": {
      "requiredSurfaces": ["notFound"]
    }
  },
  "tokens": {
    "color": {
      "bg": "#0b0b12",
      "panel": "rgba(13, 18, 30, 0.85)",
      "ink": "#e6e9f3",
      "muted": "#9aa3b2",
      "accent": "#a78bfa",
      "accent2": "#22d3ee",
      "border": "rgba(148, 163, 184, 0.18)"
    },
    "radius": {
      "base": "20px",
      "sm": "12px"
    },
    "layout": {
      "maxWidth": "1120px"
    },
    "font": {
      "body": "Urbanist, Segoe UI, sans-serif",
      "display": "Space Grotesk, Segoe UI, sans-serif",
      "mono": "JetBrains Mono, Consolas, monospace"
    }
  }
}
